<div class="h-100 w-100 d-flex justify-content-center align-items-center">
  <div class="w-50">
    <h2 class="mb-4">Sign up</h2>
    <p class="fw-light custom-text-color mb-4">Please fill your information below.</p>

    <%= form_for(resource, as: resource_name, :html => {class: "form-horizontal w-100", role: "form"}, url: registration_path(resource_name, role: params[:role])) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="input-group mt-3">
        <span class="input-group-text form-background-custom border-end-0">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M17.2539 7.40036C17.2539 10.3829 14.9028 12.8007 12.0026 12.8007C9.10239 12.8007 6.7513 10.3829 6.7513 7.40036C6.7513 4.41782 9.10239 2 12.0026 2C14.9028 2 17.2539 4.41782 17.2539 7.40036ZM16.5099 15.8434C18.1796 16.1815 19.2697 16.7331 19.7368 17.6228C20.0877 18.3171 20.0877 19.1437 19.7368 19.8381C19.2697 20.7278 18.2229 21.3149 16.4926 21.6174C15.7216 21.7729 14.9412 21.874 14.1568 21.9199C13.4301 22 12.7034 22 11.968 22H10.6444C10.3675 21.9644 10.0993 21.9466 9.8398 21.9466C9.05537 21.9063 8.27475 21.8082 7.50396 21.653C5.83427 21.3327 4.74421 20.7633 4.27704 19.8737C4.0967 19.529 4.00162 19.144 4.0002 18.7527C3.99644 18.3589 4.08864 17.9705 4.26839 17.6228C4.72691 16.7331 5.81697 16.1548 7.50396 15.8434C8.27815 15.6915 9.06142 15.5934 9.84845 15.5498C11.2881 15.4338 12.7344 15.4338 14.1741 15.5498C14.9581 15.5955 15.7383 15.6936 16.5099 15.8434Z" fill="#868AA5"/>
          </svg>
        </span>
        <div class="form-floating input-custom-height h-100">
          <%= f.text_field :name, class: "form-control form-background-custom h-100 border-start-0", id: "floatingName", placeholder: "Name" %>
          <%= f.label :name, for: "floatingName" %>
        </div>
      </div>

      <div class="input-group mt-3">
        <span class="input-group-text form-background-custom border-end-0">
          <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" viewBox="0 0 19 19" fill="none">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M5.54166 0C4.22998 0 3.16666 1.06332 3.16666 2.375V16.625C3.16666 17.9367 4.22998 19 5.54166 19H13.4583C14.77 19 15.8333 17.9367 15.8333 16.625V2.375C15.8333 1.06332 14.77 0 13.4583 0H5.54166ZM9.49999 15.8333C9.93722 15.8333 10.2917 15.4789 10.2917 15.0417C10.2917 14.6044 9.93722 14.25 9.49999 14.25C9.06276 14.25 8.70832 14.6044 8.70832 15.0417C8.70832 15.4789 9.06276 15.8333 9.49999 15.8333Z" fill="#2F3367"/>
          </svg>
        </span>
        <div class="form-floating">
          <%= f.text_field :phone_number, class: "form-control form-background-custom border-start-0", id: "floatingPhoneNumber", placeholder: "Mobile Number" %>
          <%= f.label :phone_number, "Mobile Number", for: "floatingPhoneNumber" %>
        </div>
      </div>

      <div class="input-group mt-3">
        <span class="input-group-text form-background-custom border-end-0">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M3.33334 2.5C1.95263 2.5 0.833344 3.61929 0.833344 5V15C0.833344 16.3807 1.95263 17.5 3.33334 17.5H16.6667C18.0474 17.5 19.1667 16.3807 19.1667 15V5C19.1667 3.61929 18.0474 2.5 16.6667 2.5H3.33334ZM5.53352 6.0265C5.17995 5.73187 4.65448 5.77964 4.35985 6.1332C4.06521 6.48676 4.11298 7.01224 4.46654 7.30687L8.39957 10.5844C9.32669 11.357 10.6734 11.357 11.6005 10.5844L15.5335 7.30687C15.8871 7.01224 15.9349 6.48676 15.6402 6.1332C15.3456 5.77964 14.8201 5.73187 14.4665 6.0265L10.5335 9.30402C10.2245 9.56156 9.77558 9.56156 9.46654 9.30403L5.53352 6.0265Z" fill="#868AA5"/>
          </svg>
        </span>
        <div class="form-floating">
          <%= f.email_field :email, autofocus: true, class: "form-control form-background-custom border-start-0", id: "floatingEmail", placeholder: "E-mail" %>
          <%= f.label :email, for: "floatingEmail" %>
        </div>
      </div>

      <div class="input-group mt-3">
        <span class="input-group-text form-background-custom border-end-0">
          <img src="/images/lock-icon.png", alt="Lock Icon", style="height: 20px; width: 17px" />
        </span>
        <div class="form-floating">
          <%= f.password_field :password, class: "form-control form-background-custom border-start-0", id: "floatingPassword", placeholder: "Password" %>
          <%= f.label :password, for: "floatingPassword" %>
        </div>
      </div>

      <div class="input-group mt-3">
        <span class="input-group-text form-background-custom border-end-0">
          <img src="/images/lock-icon.png", alt="Lock Icon", style="height: 20px; width: 17px" />
        </span>
        <div class="form-floating">
          <%= f.password_field :password_confirmation, class: "form-control form-background-custom border-start-0", id: "floatingConfirmPassword", placeholder: "Confirm Password" %>
          <%= f.label :password_confirmation, for: "floatingConfirmPassword" %>
        </div>
      </div>

      <div class="actions">
        <%# <%= f.submit "Sign up", class: "btn btn-primary btn-lg mt-3" %>
        <%= button_tag(type: "submit", class: "btn btn-primary btn-lg mt-4") do %>
          <div class="d-flex align-items-center">
            <span class="me-4">Sign up</span> 
            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="18" viewBox="0 0 10 18" fill="none">
              <path d="M1.5625 15.875L8.4375 9L1.5625 2.125" stroke="white" stroke-width="2.8" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        <% end %>
      </div>
      <%= f.hidden_field :role, value: params[:role] %>
    <% end %>

    <hr class="my-4" />

    <div class="d-flex w-100 align-items-center justify-content-between">
      <span class="custom-text-color">Already have an account?</span>
      <%# <span>Login to your account</span> %>
      <%= link_to "Login to your account", new_user_session_path, class: "text-decoration-none fw-bold" %>
    </div>

    <%# <%= render "devise/shared/links" %>
  </div>
</div>