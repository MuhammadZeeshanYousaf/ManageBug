<!DOCTYPE html>
<html>
  <head>
    <title>BugTracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/slim-select/1.27.1/slimselect.min.css", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <% if notice %>
      <div class="alert alert-primary m-0" role="alert"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger m-0" role="alert"><%= alert %></div>
    <% end %>
    <%# <%= render "layouts/messages" %>
    <%= yield %>
  </body>
</html>
